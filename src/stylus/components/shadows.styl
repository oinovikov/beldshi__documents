// shadows component

.shadows
  position: fixed
  top: 0
  // right: 0
  // bottom: 0
  left: 0
  z-index: 10
  display: block
  width: 100vw
  height: 100%
  padding: 0
  margin: 0
  overflow: hidden
  visibility: hidden

  &__overlay
    position: absolute
    top: 0
    right: 0
    bottom: 0
    left: 0
    z-index: -1
    display: block
    padding: 0
    margin: 0
    background-color: #333
    // background-color: rgba(#333, 0)
    overflow: hidden
    opacity: 0
    visibility: hidden
    transition-property: background-color, opacity, visibility
    transition-timing-function: ease-out
    transition-duration: .16s
    user-select: none
    will-change: background-color, opacity, visibility

    &_show
      // background-color: rgba(#333, .88)
      opacity: .88
      visibility: visible
      transition-timing-function: ease-in
