// List order control component

.order
  box-sizing: border-box
  position: relative
  // z-index: 1
  display: flex
  flex-flow: row nowrap
  justify-content: stretch
  align-content: center
  align-items: center
  height: 3rem
  // padding: .25rem
  margin: 0
  border-radius: .25rem
  background-color: #fafafa
  font: getFont(px2rem(14), 1.5rem)
  color: rgba(0, 0, 0, .64)
  letter-spacing: px2rem(.24)

  &__field
    appearance: none
    box-sizing: border-box
    flex: 1 1 auto
    height: 100%
    border: none
    border-right: .0625rem solid #eee
    outline: none
    // box-shadow: .0625rem 0 0 #eee
    // text-overflow: ellipsis
    // overflow: hidden
    // transition: all .24s ease
    // will-change: color

  &__sort
    @extends $button
    position: relative
    flex: 0 0 auto
    display: block
    width: 1.25rem
    height: @width
    padding: .625rem
    cursor: pointer
    // visibility: hidden
    opacity: .48
    // transform: translateY(-50%) scale(.6)
    transition: all .24s ease
    user-select: none
    will-change: opacity

    &:hover
      opacity: .88

